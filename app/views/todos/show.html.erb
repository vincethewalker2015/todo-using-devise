<div class="row">
  <h2 class="text-center">My To Do</h2>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <p><span class="descriptionText">Name:</span> <%= @todo.name %></p>
          <br />
          <p><span class="descriptionText">Description:</span> <%= @todo.description %></p>
            <p>
              <%# if logged_in? && (current_user == @todo.user || current_user.admin?) %>
              <%= link_to "Edit This To Do", edit_todo_path(@todo), class: "btn btn-primary bttn" %> 
            <%# end %>
            <%= link_to "Back to Index", todos_path, class: "btn btn-warning bttn" %>
          </p>
      </div>
  </div>
